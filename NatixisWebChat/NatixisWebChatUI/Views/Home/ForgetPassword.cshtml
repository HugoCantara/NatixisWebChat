@using NatixisWebChatModels.AppModels
@model UsersModel
@{
    ViewData["Title"] = "Reset Password Page";

    var message = TempData["SuccessfulUpdate"];
    TempData.Keep("SuccessfulUpdate");
}

<div class="text-center">
    <h1 class="display-4 titleForgotPasswordView">FORGOT PASSWORD?</h1>
    @*<h4>Please enter your Username and E-mail to recieve a new password on your E-mail.</h4>*@
</div>

<br />

<div class="text-center">
    <h6 style="color: red">
        <b>@ViewBag.error</b>    
    </h6>
</div>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label class="labelForgotPasswordView" asp-for="Username">ENTER YOUR USERNAME</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label class="labelForgotPasswordView" asp-for="Email">ENTER YOUR EMAIL</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="SEND NEW PASSWORD" class="btn btn-success" />
            </div>
        </form>
        <br />
        <div class="footer-links">
            @if (User.Identity.IsAuthenticated)
            {
                <div>
                    @Html.ActionLink("GO BACK TO CHAT PAGE", "Index", "WebChat")
                </div>
            }
            else
            {
                <div>
                    @Html.ActionLink("GO BACK TO LOGIN PAGE", "Index")
                </div>
            }
        </div>        
    </div>
</div>
