@using NatixisWebChatModels.AppModels
@model UsersModel
@{
    ViewData["Title"] = "Home Page";

    var message = TempData["SuccessfulUpdate"];
    var messageRegister = TempData["SuccessfulRegister"];
}

<div class="text-center">
    <h1 class="display-4 titleIndexView">WELCOME TO NATIXIS WEBCHAT!</h1>
    <h5 class="subTitleIndexView">PLEASE LOGIN TO JOIN US</h5>
</div>

<br />

<div class="container">
    <div class="d-flex justify-content-center h-100">
        <div class="card borderBoxIndexView">
            
            <div class="card-header boxTitleIndexView">
                <h3>SIGN IN</h3>
            </div>
            
            <div class="text-center">
                <h6 style="color: red"><b>@ViewBag.error</b></h6>
                <h6 style="color: green"><b>@message</b></h6>
                <h6 style="color: green"><b>@messageRegister</b></h6>
            </div>
            
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        <input asp-for="Username" placeholder="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-warning"></span>
                    </div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key fa-spin"></i></span>
                        </div>
                        <input asp-for="Password" type="password" placeholder="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-warning"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn float-left login_btn" />
                    </div>
                </form>
            </div>
            
            <div class="card-footer footer-links">
                <div class="d-flex justify-content-center">
                    @Html.ActionLink("SIGN UP", "Register")
                </div>
                <div class="d-flex justify-content-center">
                    @Html.ActionLink("FORGOT YOUR PASSWORD?", "ForgetPassword")
                </div>
            </div>

        </div>
    </div>
</div>
